# Auto normalize line endings
* text=auto

# Explicit line endings
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.css text eol=lf
*.json text eol=lf
*.html text eol=lf
*.md text eol=lf
*.sh text eol=lf

# Treat lock files as binary
package-lock.json binary
yarn.lock binary

# Prevent linguist from classifying asset files
*.png binary
*.jpg binary
*.svg linguist-vendored
*.ico linguist-vendored

# Mark TypeScript as the primary language
*.ts linguist-language=TypeScript
*.tsx linguist-language=TypeScript
